<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;netstandard2.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <RepositoryUrl>https://gitee.com/jamesfancy/viyi-strings.git</RepositoryUrl>
    <PackageProjectUrl>https://gitee.com/jamesfancy/viyi-strings</PackageProjectUrl>
    <Authors>James Fan</Authors>
    <VersionPrefix>1.1.0</VersionPrefix>
    <LicenseUrl>https://license.coscl.org.cn/MulanPSL2/</LicenseUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <SignAssembly>True</SignAssembly>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="" />
    <None Include="..\LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
    <Compile Remove="Viyi.Strings %28netstandard2.0%29\**" />
    <EmbeddedResource Remove="Viyi.Strings %28netstandard2.0%29\**" />
    <None Remove="Viyi.Strings %28netstandard2.0%29\**" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net6.0'">
    <Compile Remove="Viyi.Strings %28net6.0%29\**" />
    <EmbeddedResource Remove="Viyi.Strings %28net6.0%29\**" />
    <None Remove="Viyi.Strings %28net6.0%29\**" />
  </ItemGroup>
</Project>
